@page "/"

<ValidateForm class="form-inline" Model="@Model" OnValidSubmit="@OnValidSubmit" OnInvalidSubmit="@OnInvalidSubmit">
    <div class="row">
        <div class="form-group col-12 col-sm-6">
            <BootstrapInput name="gConnectStr" @bind-Value="@Model.ConnectStr">
                <Tooltip Placement="Placement.Right" Title="填入連線字串" />
            </BootstrapInput>
        </div>
        <div class="form-group col-12 col-sm-6">
            <BootstrapInput name="gFileName" @bind-Value="@Model.FileName">
                <Tooltip Placement="Placement.Bottom" Title="填入檔案名稱" />
            </BootstrapInput>
        </div>
        <div class="form-group col-12 col-sm-6">
            <Select name="gFuDang" @bind-Value="@Model.FileType">
                <Tooltip Placement="Placement.Right" Title="選擇副檔名" />
            </Select>
        </div>

        <div class="form-group col-12">
            <Textarea name="gCommand" placeholder="請輸入..." rows="4" @bind-Value="@Model.SqlCommand">
                <Tooltip Placement="Placement.Bottom" Title="輸入SQL SELECT 語法" />
            </Textarea>
            @*<BootstrapInput @bind-Value="@Model.SqlCommand" />*@
        </div>
        <div class="form-group col-12">
            <Button name="gSubmit" ButtonType="@ButtonType.Submit" Icon="fas fa-print" IsAsync="true" Text="生成試算表">
                <Tooltip Placement="Placement.Right" Title="點擊生成試算表" />
            </Button>
        </div>
    </div>
    
</ValidateForm>
